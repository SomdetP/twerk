<%= simple_form_for(@twerk) do|f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :twerk, label: "Let's Twerk", input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Twerk NOW!" %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>